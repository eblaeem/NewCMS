@model CMS.Models.CreatePageRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-area="Admin" asp-controller="Page" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PageGroupId" class="control-label"></label>
                <select asp-for="PageGroupId" class="form-control" asp-items="@Model.PageGroups"></select>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <input asp-for="ShortDescription" class="form-control" />
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.UploadImage" class="control-label"></label>
                <input type="file" name="uploadImage" asp-for="@Model.UploadImage" class="form-control" />

                <span asp-validation-for="@Model.UploadImage" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ShowInSlideshow" /> @Html.DisplayNameFor(model => model.ShowInSlideshow)
                </label>
            </div>

            <div class="form-group d-flex justify-content-end">
                <input type="submit" value="ثبت" class="btn btn-success ml-2" />
                <a class="btn btn-dark" asp-action="Index">بازگشت</a>
            </div>
        </form>
    </div>
</div>
